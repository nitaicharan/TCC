	\begin{center}%
			\muctbf{\imprimirinstituicao}
				\\ \muctbf{Pró-Reitoria Acadêmica – PROAC}
				\\ \muctbf{\curso}
			\vspace*{5cm}

			\muctbf{\imprimirautor}

			\vfill
			\begin{center}
				\muctbf{\imprimirtitulo}
			\end{center}
			\vfill

			\muctbf{\imprimirlocal}

			\muctbf{\imprimirdata}

			\vspace*{1cm}
	\end{center}
}


