\makeatletter

\renewcommand{\folhaderostocontent}{
	\begin{center}
		\muctbf\imprimirtitulo

		\vspace*{1cm}

		\abntex@ifnotempty{\imprimirpreambulo, sob orientação do Prof. MS.c. Fábio Falcão de França.}{%
			\hspace{.45\textwidth}
		\begin{minipage}{.5\textwidth}
			\SingleSpacing
			\imprimirpreambulo, sob orientação do Prof. MS.c. Fábio Falcão de França.
		\end{minipage}%
			\vspace*{\fill}
		}%

		\vspace*{\fill}


		\muctbf{\imprimirlocal}

		\par

		\muctbf{\imprimirdata}
		\par
		\vspace*{1cm}
	\end{center}
}

